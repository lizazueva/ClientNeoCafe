<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- HEADER -->
    <TextView
        android:id="@+id/text_our_menu"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/text_our_menu"
        android:textColor="@color/black_title"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guidelineHeaderBottom"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ARROW BUTTON -->
    <ImageView
        android:id="@+id/image_more_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icn_arrow"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="@+id/text_our_menu" />

    <!-- COFFEE CARD -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_for_coffee"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardBackgroundColor="@color/yellow"
        app:cardCornerRadius="20dp"
        android:layout_marginRight="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guidelineFirstBottom"
        app:layout_constraintEnd_toEndOf="@id/guidelineMiddleVertical"
        app:layout_constraintTop_toTopOf="@id/guidelineTop" >

        <ImageView
            android:id="@+id/image_coffee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_coffee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text=""
        android:textColor="@color/black_title"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/card_for_coffee"
        app:layout_constraintEnd_toEndOf="@id/card_for_coffee"
        app:layout_constraintTop_toBottomOf="@+id/card_for_coffee" />


    <!-- DESSERT CARD -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_for_desert"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardBackgroundColor="@color/yellow"
        app:cardCornerRadius="20dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="@id/guidelineMiddleVertical"
        app:layout_constraintBottom_toBottomOf="@id/guidelineFirstBottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/guidelineTop" >
        <ImageView
            android:id="@+id/image_desert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal|center_vertical" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_desert"
        style="@style/TextTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text=""
        android:textColor="@color/black_title"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/card_for_desert"
        app:layout_constraintTop_toBottomOf="@+id/card_for_desert" />

    <!-- COCKTAIL CARD -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_for_cocktail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardBackgroundColor="@color/yellow"
        app:cardCornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guidelineLeftVertical"
        app:layout_constraintBottom_toBottomOf="@id/guidelineBottom"
        app:layout_constraintTop_toBottomOf="@id/guidelineSecondTop" >

        <ImageView
            android:id="@+id/image_coctail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal|center_vertical" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_coctail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text=""
        android:textColor="@color/black_title"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/card_for_cocktail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_for_cocktail" />

    <!-- BAKERY CARD -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_for_bakery"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardBackgroundColor="@color/yellow"
        app:cardCornerRadius="20dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintEnd_toEndOf="@id/guidelineRightVertical"
        app:layout_constraintBottom_toBottomOf="@id/guidelineBottom"
        app:layout_constraintStart_toStartOf="@id/guidelineLeftVertical"
        app:layout_constraintTop_toTopOf="@id/guidelineSecondTop">

        <ImageView
            android:id="@+id/image_bakery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_bakery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="8dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/black_title"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_for_bakery" />

    <!-- TEA CARD -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_for_tea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardBackgroundColor="@color/yellow"
        app:cardCornerRadius="20dp"
        android:paddingStart="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guidelineRightVertical"
        app:layout_constraintBottom_toBottomOf="@id/guidelineBottom"
        app:layout_constraintTop_toTopOf="@id/guidelineSecondTop">

        <ImageView
            android:id="@+id/image_tea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal|center_vertical" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_tea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/black_title"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_for_tea" />

    <!-- GUIDELINE-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHeaderBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.10"/>

    <!-- FIRST ROW TOP GUIDELINE-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.16"/>

    <!-- FIRST ROW BOTTOM GUIDELINE-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineFirstBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.48"/>

    <!-- SECOND ROW TOP GUIDELINE-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineSecondTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6"/>

    <!-- SECOND ROW BOTTOM GUIDELINE-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.92"/>

    <!-- FIRST ROW VERTICAL MIDDLE GUIDELINE-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineMiddleVertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <!-- SECOND ROW VERTICAL LEFT SPACE GUIDELINE-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineLeftVertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.32"/>

    <!-- SECOND ROW VERTICAL RIGHT SPACE GUIDELINE-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineRightVertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.68"/>
</androidx.constraintlayout.widget.ConstraintLayout>