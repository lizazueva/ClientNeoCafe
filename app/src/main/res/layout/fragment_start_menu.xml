<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.home.StartMenuFragment">

    <Spinner
        android:id="@+id/spinner_options"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/button_backgr_grey"
        android:paddingHorizontal="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_our_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/text_our_menu"
        android:textColor="@color/black_title"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/spinner_options"
        app:layout_constraintTop_toBottomOf="@id/spinner_options" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_for_coffee"
        android:layout_width="170dp"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="@color/yellow"
        app:cardCornerRadius="20dp"
        app:layout_constraintStart_toStartOf="@+id/text_our_menu"
        app:layout_constraintTop_toBottomOf="@id/text_our_menu" >

        <ImageView
            android:id="@+id/image_coffee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:src="@drawable/img_coffee" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_coffee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="8dp"
        android:text="Кофе"
        android:textColor="@color/black_title"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/text_our_menu"
        app:layout_constraintTop_toBottomOf="@+id/card_for_coffee" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_for_desert"
        android:layout_width="170dp"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="@color/yellow"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_our_menu">

        <ImageView
            android:id="@+id/image_desert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:src="@drawable/img_desert" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_desert"
        style="@style/TextTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="58dp"
        android:text="Десерты"
        android:textColor="@color/black_title"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_for_desert" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_for_cocktail"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="@color/yellow"
        app:cardCornerRadius="20dp"
        app:layout_constraintStart_toStartOf="@+id/text_our_menu"
        app:layout_constraintTop_toBottomOf="@id/text_coffee" >

        <ImageView
            android:id="@+id/image_coctail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:src="@drawable/img_coctail" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_coctail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="Коктейли"
        android:textColor="@color/black_title"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_for_cocktail" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_for_bakery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/card_for_tea"
        app:layout_constraintStart_toEndOf="@+id/card_for_cocktail"
        app:layout_constraintTop_toBottomOf="@+id/text_coffee">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_for_bakery"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="@color/yellow"
            app:cardCornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/image_bakery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:src="@drawable/img_donat" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/text_bakery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="8dp"
            android:text="Выпечка"
            android:textColor="@color/black_title"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_for_bakery" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/card_for_tea"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="@color/yellow"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_coffee">

        <ImageView
            android:id="@+id/image_tea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:src="@drawable/img_tea" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_tea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="48dp"
        android:text="Чай"
        android:textColor="@color/black_title"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_for_tea" />


    <TextView
        android:id="@+id/text_popular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/text_popular"
        android:textColor="@color/black_title"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/spinner_options"
        app:layout_constraintTop_toBottomOf="@id/text_coctail" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_popular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_popular" />

    <ImageView
        android:id="@+id/image_more_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="5dp"
        android:paddingTop="5dp"
        android:src="@drawable/icn_arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/text_our_menu"
        app:layout_constraintTop_toBottomOf="@+id/spinner_options" />


</androidx.constraintlayout.widget.ConstraintLayout>